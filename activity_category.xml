<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.dbms.category">

    <Button
        android:id="@+id/elec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="Electronics" />

    <Button
        android:id="@+id/pan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="pantry" />

    <Button
        android:id="@+id/men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pan"
        android:layout_alignRight="@+id/pan"
        android:layout_below="@+id/pan"
        android:layout_marginTop="30dp"
        android:text="men" />

    <Button
        android:id="@+id/women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/men"
        android:layout_alignStart="@+id/men"
        android:layout_below="@+id/men"
        android:layout_marginTop="35dp"
        android:text="women" />

    <Button
        android:id="@+id/kid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/women"
        android:layout_alignStart="@+id/women"
        android:layout_below="@+id/women"
        android:layout_marginTop="36dp"
        android:text="kids" />
</RelativeLayout>
